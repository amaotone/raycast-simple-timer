{
  "name": "simple-timer",
  "title": "Simple Timer",
  "description": "Set a simple timer using Raycast",
  "icon": "⏱️",
  "author": "Amane Suzuki <amane.suzu@gmail.com>",
  "license": "MIT",
  "commands": [
    {
      "name": "index",
      "title": "Set Timer",
      "description": "Set a timer for a specified number of minutes",
      "mode": "no-view",
      "arguments": [
        {
          "name": "timer",
          "placeholder": "Minutes",
          "type": "text",
          "required": true
        }
      ]
    }
  ],
  "dependencies": {
    "@raycast/api": "^1.38.2"
  },
  "devDependencies": {
    "@types/node": "~18.8.3",
    "@types/react": "^18.0.9",
    "@typescript-eslint/eslint-plugin": "^5.0.0",
    "@typescript-eslint/parser": "^5.0.0",
    "eslint": "^7.32.0",
    "eslint-config-prettier": "^8.3.0",
    "prettier": "^2.5.1",
    "typescript": "^4.4.3"
  },
  "scripts": {
    "build": "ray build -e dist",
    "dev": "ray develop",
    "lint": "ray lint"
  }
}
